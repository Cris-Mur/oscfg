showLogo() {
	cat << "EOF"
         __         ____                       
   _____/ /_  ___  / / /                       
  / ___/ __ \/ _ \/ / /                        
 (__  ) / / /  __/ / /                         
/____/_/_/_/\___/_/_/__  ____ _____ ____  _____
  / __ `__ \/ __ `/ __ \/ __ `/ __ `/ _ \/ ___/
 / / / / / / /_/ / / / / /_/ / /_/ /  __/ /    
/_/ /_/ /_/\__,_/_/ /_/\__,_/\__, /\___/_/     
                            /____/             
------------------------------------------------

EOF
}

help() {
	showLogo;
	usage;
}

usage() {
	echo "Usage: $0 {}"
	exit 1
}


case "$1" in
	-h | --help | help) help;;
	*) usage ;;
esac
