#!/bin/bash

# Opciones del menú
options=("Opción 1" "Opción 2" "Opción 3" "Salir")

# Posición inicial
selected=0

while true; do
    clear
    echo "=== Menú Interactivo ==="
    echo

    for i in "${!options[@]}"; do
        if [[ $i == $selected ]]; then
            tput setaf 2; tput bold
            echo "> ${options[$i]}"
            tput sgr0
        else
            echo "  ${options[$i]}"
        fi
    done

    # Capturar tecla
    read -rsn1 input
    case $input in
        A) ((selected--));;  # Flecha arriba
        B) ((selected++));;  # Flecha abajo
        "")  # Enter
            case $selected in
                0) echo "Elegiste Opción 1"; read -p "Presiona enter para continuar";;
                1) echo "Elegiste Opción 2"; read -p "Presiona enter para continuar";;
                2) echo "Elegiste Opción 3"; read -p "Presiona enter para continuar";;
                3) echo "Saliendo..."; exit;;
            esac;;
    esac

    # Limitar selección dentro del rango
    ((selected < 0)) && selected=0
    ((selected >= ${#options[@]})) && selected=$((${#options[@]} - 1))
done

